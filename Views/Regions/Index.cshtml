@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<NPWalksUI.Models.DTO.RegionDto>

<h1 class="text text-center">Response</h1>
<a asp-controller="Regions" asp-action="Add" class="btn btn-primary m-3">Add New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Code</td>
                <td>@walk.Name</td>
                <td><img src=@walk.RegionImageUrl /></td>
                <td>
                    <a class="btn btn-warning" asp-controller="Regions" asp-action="Edit" asp-route-id="@walk.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Regions" asp-action="Edit" asp-route-id="@walk.Id">Delete</a>
                </td>
               
            </tr>
        }
    </tbody>
</table>